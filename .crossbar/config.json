{
    "version": 2,
    "controller": {},
    "workers": [{
        "type": "router",
        "realms": [{
            "name": "realm1",
            "roles": [{
                    "name": "bcm-be",
                    "permissions": [{
                        "uri": "",
                        "match": "prefix",
                        "allow": {
                            "call": false,
                            "register": false,
                            "publish": true,
                            "subscribe": true
                        },
                        "disclose": {
                            "caller": false,
                            "publisher": false
                        },
                        "cache": true
                    }]
                },
                {
                    "name": "relayer",
                    "permissions": [{
                        "uri": "",
                        "match": "prefix",
                        "allow": {
                            "call": false,
                            "register": false,
                            "publish": false,
                            "subscribe": true
                        },
                        "disclose": {
                            "caller": false,
                            "publisher": false
                        },
                        "cache": true
                    }]
                }
            ]


        }],
        "transports": [{
            "type": "universal",
            "endpoint": {
                "type": "tcp",
                "port": 8080
            },
            "rawsocket": {},
            "websocket": {
                "ws": {
                    "type": "websocket",
                    "auth": {
                        "wampcra": {
                            "type": "static",
                            "users": {
                                "bcm-be": {
                                    "secret": "ANSIBLE_ME",
                                    "role": "bcm-be"
                                },
                                "relayer": {
                                    "secret": "ANSIBLE_ME",
                                    "role": "relayer"
                                }
                            }
                        }
                    }
                }
            }
        }]
    }]
}
